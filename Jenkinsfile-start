pipeline {
    agent any
    environment{
        AWS_DEFAULT_REGION="us-east-1"
    }
    triggers {
        cron('58 10 * * *')
    }
    parameters {
        string(name: 'NAME', defaultValue: 'database-1,database-2', description: 'What is the name of the database?')
    }
    stages {
        stage('Example') {
            steps {
                echo "Database is: ${params.NAME}"
            }
        }
        stage('Python Script') {
            steps {
                withCredentials([aws(credentialsId: "760451896171", accessKeyVariable: 'AWS_ACCESS_KEY_ID', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    sh 'python3 script.py start'
                }
            }
        }
    }
}
